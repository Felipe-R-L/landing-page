{
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/en-US/:path*",                "destination": "/en-US/:path*" },
    { "source": "/en-US/:path((?!.*\\.).*)",    "destination": "/en-US/index.html" },
    { "source": "/pt/:path*",                   "destination": "/pt/:path*" },
    { "source": "/pt/:path((?!.*\\.).*)",       "destination": "/pt/index.html" },
    { "source": "/:path((?!.*\\.).*)",          "destination": "/pt/index.html" }
  ]
}
