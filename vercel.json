{
  "cleanUrls": true,
  "trailingSlash": false,

  "rewrites": [

    { "source": "/en-US",            "destination": "/en-US/index.html" },
    { "source": "/en-US/",           "destination": "/en-US/index.html" },
    { "source": "/en-US/:path*",     "destination": "/en-US/index.html" },


    { "source": "/pt",               "destination": "/pt/index.html" },
    { "source": "/pt/",              "destination": "/pt/index.html" },
    { "source": "/pt/:path*",        "destination": "/pt/index.html" },

    { "source": "/",                 "destination": "en-US/index.html" },
    { "source": "/:path*",           "destination": "en-US/index.html" }
  ]
}
