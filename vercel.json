{
  "cleanUrls": true,
  "trailingSlash": false,

  "rewrites": [
    { "source": "/en-US/:path*", "destination": "/en-US/:path*", "locale": false },
    { "source": "/en-US/:path((?!.*\\.).*)", "destination": "/en-US/index.html", "locale": false },

    { "source": "/pt/:path*", "destination": "/pt/:path*", "locale": false },
    { "source": "/pt/:path((?!.*\\.).*)", "destination": "/pt/index.html", "locale": false },

    { "source": "/:path((?!.*\\.).*)", "destination": "/pt/index.html", "locale": false }
  ]
}
